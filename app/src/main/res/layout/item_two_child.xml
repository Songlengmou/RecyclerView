<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/bottom_text_unchecked_color" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/credit_tv1"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/bottom_text_unchecked_color" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/bottom_text_unchecked_color" />

        <TextView
            android:id="@+id/credit_tv2"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:textColor="@color/bottom_text_unchecked_color" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/bottom_text_unchecked_color" />

        <TextView
            android:id="@+id/credit_tv3"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:textColor="@color/bottom_text_unchecked_color" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/bottom_text_unchecked_color" />

        <TextView
            android:id="@+id/credit_tv4"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:gravity="right"
            android:textColor="@color/bottom_text_unchecked_color" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/bottom_text_unchecked_color" />

        <TextView
            android:id="@+id/credit_tv5"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/bottom_text_unchecked_color" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/bottom_text_unchecked_color" />

        <TextView
            android:id="@+id/credit_tv6"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:gravity="right"
            android:textColor="@color/bottom_text_unchecked_color" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/bottom_text_unchecked_color" />

        <TextView
            android:id="@+id/credit_tv7"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:gravity="right"
            android:textColor="@color/bottom_text_unchecked_color" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/bottom_text_unchecked_color" />

        <TextView
            android:id="@+id/credit_tv8"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:gravity="right"
            android:textColor="@color/bottom_text_unchecked_color" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/bottom_text_unchecked_color" />

        <TextView
            android:id="@+id/credit_tv9"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:gravity="right"
            android:textColor="@color/bottom_text_unchecked_color" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/bottom_text_unchecked_color" />

        <TextView
            android:id="@+id/credit_tv10"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/bottom_text_unchecked_color" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/bottom_text_unchecked_color" />
</LinearLayout>