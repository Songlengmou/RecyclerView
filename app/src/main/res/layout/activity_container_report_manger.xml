<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.seven.ContainerReportMangerActivity">

    <LinearLayout
        android:id="@+id/activity_my_file"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tl_myfile"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            app:tabIndicatorColor="#0cb9f5"
            app:tabIndicatorHeight="3dp"
            app:tabSelectedTextColor="#000"
            app:tabTextColor="#334E6C" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#334E6C" />

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/vp_myfile"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

    </LinearLayout>
</LinearLayout>