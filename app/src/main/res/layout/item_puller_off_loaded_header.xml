<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dp_15"
    android:layout_marginRight="@dimen/dp_15"
    android:background="@drawable/container_bg_header"
    tools:ignore="MissingConstraints">

    <TextView
        android:id="@+id/item_tv_delivery_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_15"
        android:textColor="@color/bottom_text_unchecked_color" />

    <TextView
        android:id="@+id/item_tv_load_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:padding="@dimen/dp_15"
        android:textColor="@color/bottom_text_unchecked_color" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_tv_delivery_no">

        <TextView
            android:id="@+id/item_tv_from_port"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/img_to_direction"
            android:padding="@dimen/dp_15"
            android:textColor="@color/bottom_text_unchecked_color" />

        <ImageView
            android:id="@+id/img_to_direction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@mipmap/icon_right_direction" />

        <TextView
            android:id="@+id/item_tv_to_port"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/img_to_direction"
            android:padding="@dimen/dp_15"
            android:textColor="@color/bottom_text_unchecked_color" />
    </RelativeLayout>
</RelativeLayout>